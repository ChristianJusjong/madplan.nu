generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum Gender {
  MALE
  FEMALE
}

enum ActivityLevel {
  SEDENTARY
  LIGHTLY_ACTIVE
  MODERATELY_ACTIVE
  VERY_ACTIVE
  EXTRA_ACTIVE
}

enum Goal {
  LOSE_WEIGHT
  MAINTAIN
  GAIN_WEIGHT
  BUILD_MUSCLE
}

model User {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  email     String   @unique
  
  height    Float
  weight    Float
  age       Int
  gender    Gender
  activityLevel ActivityLevel
  
  goal             Goal     @default(LOSE_WEIGHT)
  familyMembers    Json?    // { adults: number, children: number }
  
  bmr              Float
  dailyCalorieGoal Float
  
  preferences      Json?    // Stores { skipLunch: boolean, leftovers: boolean, etc. }
  
  mealPlans MealPlan[]
  recipes   Recipe[]
}

model MealPlan {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  startDate DateTime
  endDate   DateTime
  
  planData  Json
  
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  shoppingList ShoppingList?
}

model ShoppingList {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  items     Json
  
  mealPlanId String   @unique
  mealPlan   MealPlan @relation(fields: [mealPlanId], references: [id], onDelete: Cascade)
}

model Recipe {
  id          String   @id @default(uuid())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  title       String
  description String?
  
  ingredients Json     // List of ingredients
  instructions Json    // Step by step instructions
  
  prepTime    Int?     // minutes
  cookTime    Int?     // minutes
  servings    Int      @default(4)
  
  tags        String[] // ["Healthy", "Dinner", "Italian"]
  
  sourceUrl   String?
  imageUrl    String?
  
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}
